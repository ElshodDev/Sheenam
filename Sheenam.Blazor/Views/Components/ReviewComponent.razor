@using Sheenam.Blazor.Models.Foundations.Reviews
@namespace Sheenam.Blazor.Views.Components

@if (!string.IsNullOrWhiteSpace(ErrorMessage))
{
    <div class="alert alert-danger mt-3" role="alert">@ErrorMessage</div>
}

@if (Reviews == null)
{
    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yuklanmoqda...</span>
        </div>
        <span class="ms-2">Ma'lumotlar yuklanmoqda...</span>
    </div>
}
else if (!Reviews.Any())
{
    <div class="alert alert-info mt-3" role="alert">
        Hozircha sharhlar ro'yxati bo'sh.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover mt-3 mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="text-nowrap">Rating</th>
                    <th class="text-nowrap">Positive</th>
                    <th>Comment</th>
                    <th class="text-nowrap">Created</th>
                    <th class="text-center">Amallar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Reviews)
                {
                    <tr>
                        <td class="align-middle">@review.Rating</td>
                        <td class="align-middle">@(review.IsPositive.HasValue ? (review.IsPositive.Value ? "Ha" : "Yo'q") : "-")</td>
                        <td class="align-middle">@review.Comment</td>
                        <td class="align-middle text-nowrap">@review.CreatedDate.ToString("dd.MM.yyyy")</td>
                        <td class="text-center align-middle text-nowrap">
                            <button class="btn btn-outline-info btn-sm me-1 shadow-sm"
                                    @onclick="() => OnEditSelected.InvokeAsync(review)">
                                <i class="oi oi-pencil"></i> Tahrirlash
                            </button>
                            <button class="btn btn-outline-danger btn-sm shadow-sm"
                                    @onclick="() => DeleteReview(review.Id)">
                                <i class="oi oi-trash"></i> O'chirish
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
