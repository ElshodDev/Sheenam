@using Sheenam.Blazor.Models.Foundations.HomeRequests
@namespace Sheenam.Blazor.Views.Components

@if (HomeRequests == null)
{
    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yuklanmoqda...</span>
        </div>
        <span class="ms-2">Ma'lumotlar yuklanmoqda...</span>
    </div>
}
else if (!HomeRequests.Any())
{
    <div class="alert alert-info mt-3" role="alert">
        Hozircha uy so'rovlari ro'yxati bo'sh. Yangi so'rov qo'shishingiz mumkin.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover mt-3 mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Mehmon ID</th>
                    <th>Uy ID</th>
                    <th>Xabar</th>
                    <th>Boshlanish</th>
                    <th>Tugash</th>
                    <th>Holat</th>
                    <th class="text-center">Amallar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var homeRequest in HomeRequests)
                {
                    <tr>
                        <td class="align-middle">@homeRequest.GuestId</td>
                        <td class="align-middle">@homeRequest.HomeId</td>
                        <td class="align-middle">@homeRequest.Message</td>
                        <td class="align-middle text-nowrap">@homeRequest.StartDate.ToString("dd.MM.yyyy")</td>
                        <td class="align-middle text-nowrap">@homeRequest.EndDate.ToString("dd.MM.yyyy")</td>
                        <td class="align-middle">
                            <span class="badge @GetStatusBadge(homeRequest.Status)">
                                @homeRequest.Status
                            </span>
                        </td>
                        <td class="text-center align-middle text-nowrap">
                            <button class="btn btn-outline-info btn-sm me-1 shadow-sm"
                                    @onclick="() => OnEditSelected.InvokeAsync(homeRequest)">
                                <i class="oi oi-pencil"></i> Tahrirlash
                            </button>
                            <button class="btn btn-outline-danger btn-sm shadow-sm"
                                    @onclick="() => DeleteHomeRequest(homeRequest.Id)">
                                <i class="oi oi-trash"></i> O'chirish
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}