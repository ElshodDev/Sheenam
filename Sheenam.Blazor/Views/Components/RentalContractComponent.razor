@using Sheenam.Blazor.Models.Foundations.RentalContracts
@namespace Sheenam.Blazor.Views.Components

@if (RentalContracts == null)
{
    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yuklanmoqda...</span>
        </div>
        <span class="ms-2">Ma'lumotlar yuklanmoqda...</span>
    </div>
}
else if (!RentalContracts.Any())
{
    <div class="alert alert-info mt-3" role="alert">
        Hozircha ijara shartnomalari ro'yxati bo'sh. Yangi shartnoma qo'shishingiz mumkin.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover mt-3 mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Ijara boshlanish</th>
                    <th>Ijara tugash</th>
                    <th>Oylik ijara</th>
                    <th>Kafolat puli</th>
                    <th>Holat</th>
                    <th>Imzolangan sana</th>
                    <th class="text-center">Amallar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contract in RentalContracts)
                {
                    <tr>
                        <td class="align-middle text-nowrap">@contract.StartDate.ToString("dd.MM.yyyy")</td>
                        <td class="align-middle text-nowrap">@contract.EndDate.ToString("dd.MM.yyyy")</td>
                        <td class="align-middle">@contract.MonthlyRent.ToString("C")</td>
                        <td class="align-middle">@contract.SecurityDeposit.ToString("C")</td>
                        <td class="align-middle">
                            <span class="badge @GetStatusBadge(contract.Status)">
                                @contract.Status.ToUzbek()
                            </span>
                        </td>
                        <td class="align-middle text-nowrap">@contract.SignedDate.ToString("dd.MM.yyyy")</td>
                        <td class="text-center align-middle text-nowrap">
                            <button class="btn btn-outline-info btn-sm me-1 shadow-sm"
                                    @onclick="() => OnEditSelected.InvokeAsync(contract)">
                                <i class="oi oi-pencil"></i> Tahrirlash
                            </button>
                            <button class="btn btn-outline-danger btn-sm shadow-sm"
                                    @onclick="() => DeleteRentalContract(contract.Id)">
                                <i class="oi oi-trash"></i> O'chirish
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}