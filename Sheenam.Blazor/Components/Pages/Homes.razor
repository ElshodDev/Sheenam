@page "/homes"
@using Sheenam.Blazor.Models.Foundations.Homes
@using Sheenam.Blazor.Models.Foundations.Hosts
@using Sheenam.Blazor.Services
@using System.Net.Http.Json
@inject HttpClient HttpClient
@inject ToastService ToastService

<PageTitle>Uylar</PageTitle>

<div class="container my-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-lg-4">
            <h1 class="display-5 fw-bold text-primary mb-2">🏠 Uylar</h1>
            <p class="text-muted">Jami @filteredHomes.Count ta</p>
        </div>
        <div class="col-lg-5">
            <div class="input-group input-group-lg">
                <span class="input-group-text">🔍</span>
                <input type="text" class="form-control" placeholder="Manzil qidirish..."
                       @bind="searchQuery" />
                @if (!string.IsNullOrEmpty(searchQuery))
                {
                    <button class="btn btn-outline-secondary" @onclick="ClearSearch">✖️</button>
                }
            </div>
        </div>
        <div class="col-lg-3">
            <button class="btn btn-primary btn-lg w-100" @onclick="ShowAddForm">
                ➕ Yangi uy qo'shish
            </button>
        </div>
    </div>

    <!-- Add/Edit Form -->
    @if (showAddForm)
    {
        <div class="card shadow-lg border-0 mb-4">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0">@(isEditing ? "✏️ Tahrirlash" : "➕ Yangi uy")</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentHome" OnValidSubmit="SaveHome">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Manzil *</label>
                            <InputText @bind-Value="currentHome.Address" class="form-control" 
                                       placeholder="Manzilni kiriting" />
                            <ValidationMessage For="@(() => currentHome.Address)" class="text-danger small" />
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Uy turi *</label>
                            <InputSelect @bind-Value="currentHome.Type" class="form-select">
                                <option value="">-- Tanlang --</option>
                                <option value="@HouseType.Flat">Kvartira</option>
                                <option value="@HouseType.Bungalow">Bungalov</option>
                                <option value="@HouseType.Duplex">Duplex</option>
                                <option value="@HouseType.other">Boshqa</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => currentHome.Type)" class="text-danger small" />
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Narx (so'm) *</label>
                            <InputNumber @bind-Value="currentHome.Price" class="form-control" 
                                         placeholder="10,000 - 100,000,000" />
                            <ValidationMessage For="@(() => currentHome.Price)" class="text-danger small" />
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Maydon (m²) *</label>
                            <InputNumber @bind-Value="currentHome.Area" class="form-control" 
                                         placeholder="10 - 10,000" />
                            <ValidationMessage For="@(() => currentHome.Area)" class="text-danger small" />
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Yotoq xonalar *</label>
                            <InputNumber @bind-Value="currentHome.NumberOfBedrooms" class="form-control" 
                                         placeholder="0 - 20" />
                            <ValidationMessage For="@(() => currentHome.NumberOfBedrooms)" class="text-danger small" />
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Vanna xonalar *</label>
                            <InputNumber @bind-Value="currentHome.NumberOfBathrooms" class="form-control" 
                                         placeholder="0 - 10" />
                            <ValidationMessage For="@(() => currentHome.NumberOfBathrooms)" class="text-danger small" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end gap-2">
                            <div class="form-check form-switch">
                                <InputCheckbox @bind-Value="currentHome.IsVacant" class="form-check-input" />
                                <label class="form-check-label">Bo'sh</label>
                            </div>
                            <div class="form-check form-switch">
                                <InputCheckbox @bind-Value="currentHome.IsPetAllowed" class="form-check-input" />
                                <label class="form-check-label">Hayvon</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="fw-bold">Qo'shimcha</label>
                            <InputTextArea @bind-Value="currentHome.AdditionalInfo" class="form-control" 
                                           rows="2" placeholder="500 belgigacha" />
                            <ValidationMessage For="@(() => currentHome.AdditionalInfo)" class="text-danger small" />
                        </div>
                        <div class="col-12 text-end">
                            <button type="button" class="btn btn-secondary me-2" @onclick="CancelForm">
                                Bekor qilish
                            </button>
                            <button type="submit" class="btn btn-primary px-4">
                                @(isEditing ? "💾 Saqlash" : "➕ Qo'shish")
                            </button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="mb-3">🎛️ Filterlar</h5>
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="fw-bold">Narx (so'm)</label>
                    <div class="input-group input-group-sm">
                        <input type="number" class="form-control" placeholder="Min" @bind="minPrice" />
                        <span class="input-group-text">—</span>
                        <input type="number" class="form-control" placeholder="Max" @bind="maxPrice" />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="fw-bold">Maydon (m²)</label>
                    <div class="input-group input-group-sm">
                        <input type="number" class="form-control" placeholder="Min" @bind="minArea" />
                        <span class="input-group-text">—</span>
                        <input type="number" class="form-control" placeholder="Max" @bind="maxArea" />
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="fw-bold">Yotoq xonalar</label>
                    <select class="form-select form-select-sm" @bind="filterBedrooms">
                        <option value="">Barchasi</option>
                        <option value="1">1+</option>
                        <option value="2">2+</option>
                        <option value="3">3+</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="fw-bold">Uy turi</label>
                    <select class="form-select form-select-sm" @bind="filterType">
                        <option value="">Barchasi</option>
                        <option value="@HouseType.Flat">Kvartira</option>
                        <option value="@HouseType.Bungalow">Bungalov</option>
                        <option value="@HouseType.Duplex">Duplex</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="filterVacantOnly" />
                        <label class="form-check-label">Faqat bo'sh</label>
                    </div>
                </div>
                <div class="col-12 text-end">
                    <button class="btn btn-outline-secondary me-2" @onclick="ResetFilters">
                        🔄 Tozalash
                    </button>
                    <button class="btn btn-success px-5" @onclick="ApplyFiltersWithNotification">
                        ✅ Qo'llash
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Sorting & Results -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <strong>@filteredHomes.Count</strong> ta uy
            @if (filteredHomes.Count > 0)
            {
                <span class="text-muted">
                    (ko'rsatilmoqda: @((currentPage - 1) * pageSize + 1)-@Math.Min(currentPage * pageSize, filteredHomes.Count))
                </span>
            }
        </div>
        <div class="d-flex gap-3 align-items-center">
            <div class="d-flex gap-2 align-items-center">
                <label class="mb-0 small">Sahifada:</label>
                <select class="form-select form-select-sm" style="width: auto;" @bind="pageSize" @bind:after="OnPageSizeChanged">
                    <option value="6">6</option>
                    <option value="9">9</option>
                    <option value="12">12</option>
                    <option value="24">24</option>
                </select>
            </div>
            <div class="d-flex gap-2 align-items-center">
                <label class="mb-0 small">Saralash:</label>
                <select class="form-select form-select-sm" style="width: auto;" @bind="sortBy" @bind:after="ApplyFilters">
                    <option value="default">Default</option>
                    <option value="price-asc">Narx ↑</option>
                    <option value="price-desc">Narx ↓</option>
                    <option value="area-asc">Maydon ↑</option>
                    <option value="area-desc">Maydon ↓</option>
                </select>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <!-- Loading Skeleton -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @for (int i = 0; i < 6; i++)
            {
                <div class="col">
                    <div class="card h-100 shadow">
                        <div class="skeleton skeleton-image" style="height: 200px;"></div>
                        <div class="card-body">
                            <div class="skeleton skeleton-title mb-3"></div>
                            <div class="skeleton skeleton-text mb-2"></div>
                            <div class="skeleton skeleton-text mb-2"></div>
                            <div class="skeleton skeleton-text mb-3" style="width: 70%;"></div>
                            <div class="d-flex justify-content-between mb-3">
                                <div class="skeleton skeleton-badge"></div>
                                <div class="skeleton skeleton-badge"></div>
                            </div>
                            <div class="skeleton skeleton-button"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (filteredHomes.Count == 0)
    {
        <div class="alert alert-warning text-center p-5">
            <h3>🔍 Natija topilmadi</h3>
            <button class="btn btn-primary mt-3" @onclick="ResetFilters">Tozalash</button>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
            @foreach (var home in pagedHomes)
            {
                <div class="col">
                    <div class="card h-100 shadow hover-card">
                        <div class="card-img-top bg-gradient text-center py-5"
                             style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <span class="display-1">🏠</span>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <h5 class="text-primary mb-0">@home.Address</h5>
                                <span class="badge @GetTypeBadge(home.Type)">@GetTypeText(home.Type)</span>
                            </div>
                            <p class="text-muted small">@(home.AdditionalInfo ?? "—")</p>
                            
                            <div class="small mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>🛏️ Yotoq:</span><strong>@home.NumberOfBedrooms</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>🚿 Vanna:</span><strong>@home.NumberOfBathrooms</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>📏 Maydon:</span><strong>@home.Area m²</strong>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="text-success mb-0">@home.Price.ToString("N0") so'm</h5>
                                <span class="badge @(home.IsVacant ? "bg-success" : "bg-danger")">
                                    @(home.IsVacant ? "Bo'sh" : "Band")
                                </span>
                            </div>

                            @if (home.IsPetAllowed)
                            {
                                <span class="badge bg-info mb-2">🐕 Hayvon OK</span>
                            }

                            <div class="d-grid gap-2">
                                <button class="btn btn-sm btn-primary" @onclick="() => EditHome(home)">
                                    ✏️ Tahrirlash
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => ShowDeleteConfirm(home.Id)">
                                    🗑️ O'chirish
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <Pagination CurrentPage="@currentPage"
                    TotalPages="@totalPages"
                    TotalItems="@filteredHomes.Count"
                    PageSize="@pageSize"
                    OnPageChange="HandlePageChange" />
    }
</div>

<!-- Confirmation Dialog -->
@if (showDeleteConfirm)
{
    <div class="modal-backdrop fade show" style="z-index: 1050;"></div>
    <div class="modal fade show d-block" tabindex="-1" style="z-index: 1055;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        🗑️ Uyni o'chirish
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">Bu uyni o'chirishni xohlaysizmi? Bu amalni bekor qilib bo'lmaydi!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">
                        ❌ Yo'q
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete">
                        ✅ Ha, ishonchim komil
                    </button>
                </div>
            </div>
        </div>
    </div>
}

