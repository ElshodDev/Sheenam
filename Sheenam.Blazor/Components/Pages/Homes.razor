    private async Task SaveHome()
    {
        try
        {
            currentHome.HostId = Guid.Parse("00000000-0000-0000-0000-000000000003"); // Test uchun

            HttpResponseMessage response;
            if (isEditing)
                response = await HttpClient.PutAsJsonAsync($"api/Homes/{currentHome.Id}", currentHome);
            else
            {
                currentHome.Id = Guid.NewGuid();
                response = await HttpClient.PostAsJsonAsync("api/Homes", currentHome);
            }

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess(isEditing ? "Ma'lumotlar yangilandi!" : "Yangi uy qo'shildi!");
                showAddForm = false;
                await LoadData();
            }
        }
        catch (Exception ex) { ToastService.ShowError($"Xato: {ex.Message}"); }
    }

