@code {
    private List<Home> homes = new();
    private List<Home> filteredHomes = new();
    private List<Home> pagedHomes = new();
    private Home currentHome = new() { IsVacant = true, Type = HouseType.Flat };

    private bool isLoading = true;
    private bool isEditing = false;
    private bool showAddForm = false;
    private bool showDeleteConfirm = false;
    private Guid deleteHomeId = Guid.Empty;

    // Pagination
    private int currentPage = 1;
    private int pageSize = 9;
    private int totalPages = 1;

    private string searchQuery = "";
    private decimal? minPrice, maxPrice;
    private string sortBy = "default";

    protected override async Task OnInitializedAsync() => await LoadData();

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            var response = await HttpClient.GetAsync("api/Homes");
            if (response.IsSuccessStatusCode)
            {
                homes = await response.Content.ReadFromJsonAsync<List<Home>>() ?? new();
                ApplyFilters();
            }
        }
        catch { }
        finally { isLoading = false; }
    }

    private void ApplyFilters()
    {
        filteredHomes = homes;

        if (!string.IsNullOrWhiteSpace(searchQuery))
            filteredHomes = filteredHomes.Where(h => h.Address.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)).ToList();

        if (minPrice.HasValue) filteredHomes = filteredHomes.Where(h => h.Price >= minPrice.Value).ToList();
        if (maxPrice.HasValue) filteredHomes = filteredHomes.Where(h => h.Price <= maxPrice.Value).ToList();

        filteredHomes = sortBy switch
        {
            "price-asc" => filteredHomes.OrderBy(h => h.Price).ToList(),
            "price-desc" => filteredHomes.OrderByDescending(h => h.Price).ToList(),
            _ => filteredHomes
        };

        UpdatePagination();
    }

    private void UpdatePagination()
    {
        totalPages = (int)Math.Ceiling(filteredHomes.Count / (double)pageSize);
        if (currentPage > totalPages) currentPage = Math.Max(1, totalPages);

        pagedHomes = filteredHomes
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();

        StateHasChanged();
    }

    private void HandlePageChange(int page) { currentPage = page; UpdatePagination(); }
    private void OnPageSizeChanged() { currentPage = 1; UpdatePagination(); }

