@page "/homes"
@using Sheenam.Blazor.Models.Foundations.Homes
@using Sheenam.Blazor.Models.Foundations.Hosts
@using System.Net.Http.Json
@inject HttpClient HttpClient

<PageTitle>Uylar</PageTitle>

<div class="container my-5">

    <div class="row mb-4">
        <div class="col-lg-4">
            <h1 class="display-5 fw-bold text-primary mb-2">🏠 Uylar</h1>
            <p class="text-muted">Jami @filteredHomes.Count ta</p>
        </div>
        <div class="col-lg-5">
            <div class="input-group input-group-lg">
                <span class="input-group-text">🔍</span>
                <input type="text" class="form-control" placeholder="Manzil qidirish..."
                       @bind="searchQuery" />
                @if (!string.IsNullOrEmpty(searchQuery))
                {
                    <button class="btn btn-outline-secondary" @onclick="ClearSearch">✖️</button>
                }
            </div>
        </div>
        <div class="col-lg-3">
            <button class="btn btn-primary btn-lg w-100" @onclick="ShowAddForm">
                ➕ Yangi uy qo'shish
            </button>
        </div>
    </div>

    @if (showAddForm)
    {
        <div class="card shadow-lg border-0 mb-4">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0">@(isEditing ? "✏️ Tahrirlash" : "➕ Yangi uy")</h5>
            </div>
            <div class="card-body">
                <EditForm Model="currentHome" OnValidSubmit="SaveHome">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="fw-bold">Manzil *</label>
                            <InputText @bind-Value="currentHome.Address" class="form-control"
                                       placeholder="Manzilni kiriting" />
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Uy turi *</label>
                            <InputSelect @bind-Value="currentHome.Type" class="form-select">
                                <option value="@HouseType.Flat">Kvartira</option>
                                <option value="@HouseType.Bungalow">Bungalov</option>
                                <option value="@HouseType.Duplex">Duplex</option>
                                <option value="@HouseType.other">Boshqa</option>
                            </InputSelect>
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Narx (so'm) *</label>
                            <InputNumber @bind-Value="currentHome.Price" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Maydon (m²) *</label>
                            <InputNumber @bind-Value="currentHome.Area" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Yotoq xonalar</label>
                            <InputNumber @bind-Value="currentHome.NumberOfBedrooms" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="fw-bold">Vanna xonalar</label>
                            <InputNumber @bind-Value="currentHome.NumberOfBathrooms" class="form-control" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end gap-2">
                            <div class="form-check form-switch">
                                <InputCheckbox @bind-Value="currentHome.IsVacant" class="form-check-input" />
                                <label class="form-check-label">Bo'sh</label>
                            </div>
                            <div class="form-check form-switch">
                                <InputCheckbox @bind-Value="currentHome.IsPetAllowed" class="form-check-input" />
                                <label class="form-check-label">Hayvon</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="fw-bold">Qo'shimcha</label>
                            <InputTextArea @bind-Value="currentHome.AdditionalInfo" class="form-control" rows="2" />
                        </div>
                        <div class="col-12 text-end">
                            <button type="button" class="btn btn-secondary me-2" @onclick="CancelForm">
                                Bekor qilish
                            </button>
                            <button type="submit" class="btn btn-primary px-4">
                                @(isEditing ? "💾 Saqlash" : "➕ Qo'shish")
                            </button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="mb-3">🎛️ Filterlar</h5>
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="fw-bold">Narx (so'm)</label>
                    <div class="input-group input-group-sm">
                        <input type="number" class="form-control" placeholder="Min" @bind="minPrice" />
                        <span class="input-group-text">—</span>
                        <input type="number" class="form-control" placeholder="Max" @bind="maxPrice" />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="fw-bold">Maydon (m²)</label>
                    <div class="input-group input-group-sm">
                        <input type="number" class="form-control" placeholder="Min" @bind="minArea" />
                        <span class="input-group-text">—</span>
                        <input type="number" class="form-control" placeholder="Max" @bind="maxArea" />
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="fw-bold">Yotoq xonalar</label>
                    <select class="form-select form-select-sm" @bind="filterBedrooms">
                        <option value="">Barchasi</option>
                        <option value="1">1+</option>
                        <option value="2">2+</option>
                        <option value="3">3+</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="fw-bold">Uy turi</label>
                    <select class="form-select form-select-sm" @bind="filterType">
                        <option value="">Barchasi</option>
                        <option value="@HouseType.Flat">Kvartira</option>
                        <option value="@HouseType.Bungalow">Bungalov</option>
                        <option value="@HouseType.Duplex">Duplex</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="filterVacantOnly" />
                        <label class="form-check-label">Faqat bo'sh</label>
                    </div>
                </div>
                <div class="col-12 text-end">
                    <button class="btn btn-outline-secondary me-2" @onclick="ResetFilters">
                        🔄 Tozalash
                    </button>
                    <button class="btn btn-success px-5" @onclick="ApplyFilters">
                        ✅ Qo'llash
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div><strong>@filteredHomes.Count</strong> ta uy</div>
        <div class="d-flex gap-2 align-items-center">
            <label class="mb-0">Saralash:</label>
            <select class="form-select form-select-sm" style="width: auto;" @bind="sortBy" @bind:after="ApplyFilters">
                <option value="default">Default</option>
                <option value="price-asc">Narx ↑</option>
                <option value="price-desc">Narx ↓</option>
                <option value="area-asc">Maydon ↑</option>
                <option value="area-desc">Maydon ↓</option>
            </select>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;"></div>
            <p class="mt-3">Yuklanmoqda...</p>
        </div>
    }
    else if (filteredHomes.Count == 0)
    {
        <div class="alert alert-warning text-center p-5">
            <h3>🔍 Natija topilmadi</h3>
            <button class="btn btn-primary mt-3" @onclick="ResetFilters">Tozalash</button>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var home in filteredHomes)
            {
                <div class="col">
                    <div class="card h-100 shadow hover-card">
                        <div class="card-img-top bg-gradient text-center py-5"
                             style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <span class="display-1">🏠</span>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <h5 class="text-primary mb-0">@home.Address</h5>
                                <span class="badge @GetTypeBadge(home.Type)">@GetTypeText(home.Type)</span>
                            </div>
                            <p class="text-muted small">@(home.AdditionalInfo ?? "—")</p>

                            <div class="small mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>🛏️ Yotoq:</span><strong>@home.NumberOfBedrooms</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>🚿 Vanna:</span><strong>@home.NumberOfBathrooms</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>📏 Maydon:</span><strong>@home.Area m²</strong>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="text-success mb-0">@home.Price.ToString("N0") so'm</h5>
                                <span class="badge @(home.IsVacant ? "bg-success" : "bg-danger")">
                                    @(home.IsVacant ? "Bo'sh" : "Band")
                                </span>
                            </div>

                            @if (home.IsPetAllowed)
                            {
                                <span class="badge bg-info mb-2">🐕 Hayvon OK</span>
                            }

                            <div class="d-grid gap-2">
                                <button class="btn btn-sm btn-primary" @onclick="() => EditHome(home)">
                                    ✏️ Tahrirlash
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteHome(home.Id)">
                                    🗑️ O'chirish
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-card {
        transition: all 0.3s;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }
</style>

@code {
    private List<Home> homes = new();
    private List<Home> filteredHomes = new();
    private Home currentHome = new() { IsVacant = true, Type = HouseType.Flat };

    private bool isLoading = true;
    private bool isEditing = false;
    private bool showAddForm = false;

    private string searchQuery = "";
    private decimal? minPrice, maxPrice;
    private double? minArea, maxArea;
    private string filterBedrooms = "";
    private string filterType = "";
    private bool filterVacantOnly = false;
    private string sortBy = "default";

    protected override async Task OnInitializedAsync() => await LoadData();

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            var response = await HttpClient.GetAsync("api/Homes");
            if (response.IsSuccessStatusCode)
            {
                homes = await response.Content.ReadFromJsonAsync<List<Home>>() ?? new();
                filteredHomes = homes;
            }
        }
        catch { }
        finally { isLoading = false; }
    }

    private void ApplyFilters()
    {
        filteredHomes = homes;

        if (!string.IsNullOrWhiteSpace(searchQuery))
            filteredHomes = filteredHomes.Where(h => h.Address.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)).ToList();

        if (minPrice.HasValue) filteredHomes = filteredHomes.Where(h => h.Price >= minPrice.Value).ToList();
        if (maxPrice.HasValue) filteredHomes = filteredHomes.Where(h => h.Price <= maxPrice.Value).ToList();
        if (minArea.HasValue) filteredHomes = filteredHomes.Where(h => h.Area >= minArea.Value).ToList();
        if (maxArea.HasValue) filteredHomes = filteredHomes.Where(h => h.Area <= maxArea.Value).ToList();

        if (!string.IsNullOrEmpty(filterBedrooms) && int.TryParse(filterBedrooms, out int beds))
            filteredHomes = filteredHomes.Where(h => h.NumberOfBedrooms >= beds).ToList();

        if (!string.IsNullOrEmpty(filterType) && Enum.TryParse<HouseType>(filterType, out var type))
            filteredHomes = filteredHomes.Where(h => h.Type == type).ToList();

        if (filterVacantOnly) filteredHomes = filteredHomes.Where(h => h.IsVacant).ToList();

        filteredHomes = sortBy switch
        {
            "price-asc" => filteredHomes.OrderBy(h => h.Price).ToList(),
            "price-desc" => filteredHomes.OrderByDescending(h => h.Price).ToList(),
            "area-asc" => filteredHomes.OrderBy(h => h.Area).ToList(),
            "area-desc" => filteredHomes.OrderByDescending(h => h.Area).ToList(),
            _ => filteredHomes
        };

        StateHasChanged();
    }

    private void ResetFilters()
    {
        searchQuery = ""; minPrice = maxPrice = null; minArea = maxArea = null;
        filterBedrooms = filterType = ""; filterVacantOnly = false; sortBy = "default";
        filteredHomes = homes;
        StateHasChanged();
    }

    private void ClearSearch() { searchQuery = ""; ApplyFilters(); }

    private void ShowAddForm()
    {
        showAddForm = true; isEditing = false;
        currentHome = new Home { IsVacant = true, Type = HouseType.Flat };
    }

    private void CancelForm() { showAddForm = false; isEditing = false; }

    private async Task SaveHome()
    {
        try
        {
            currentHome.HostId = Guid.Parse("00000000-0000-0000-0000-000000000003");
            if (isEditing)
            {
                await HttpClient.PutAsJsonAsync($"api/Homes/{currentHome.Id}", currentHome);
            }
            else
            {
                currentHome.Id = Guid.NewGuid();
                await HttpClient.PostAsJsonAsync("api/Homes", currentHome);
            }
            showAddForm = false;
            await LoadData();
            ApplyFilters();
        }
        catch { }
    }

    private void EditHome(Home home)
    {
        showAddForm = true; isEditing = true;
        currentHome = new Home
        {
            Id = home.Id,
            HostId = home.HostId,
            Address = home.Address,
            AdditionalInfo = home.AdditionalInfo,
            IsVacant = home.IsVacant,
            IsPetAllowed = home.IsPetAllowed,
            IsShared = home.IsShared,
            NumberOfBedrooms = home.NumberOfBedrooms,
            NumberOfBathrooms = home.NumberOfBathrooms,
            Area = home.Area,
            Price = home.Price,
            Type = home.Type
        };
    }

    private async Task DeleteHome(Guid id)
    {
        await HttpClient.DeleteAsync($"api/Homes/{id}");
        await LoadData();
        ApplyFilters();
    }

    private string GetTypeBadge(HouseType type) => type switch
    {
        HouseType.Flat => "bg-primary",
        HouseType.Bungalow => "bg-success",
        HouseType.Duplex => "bg-warning",
        _ => "bg-secondary"
    };

    private string GetTypeText(HouseType type) => type switch
    {
        HouseType.Flat => "Kvartira",
        HouseType.Bungalow => "Bungalov",
        HouseType.Duplex => "Duplex",
        _ => "Boshqa"
    };
}