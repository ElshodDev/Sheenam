@page "/homes"
@using Sheenam.Blazor.Models.Foundations.Homes
@using Sheenam.Blazor.Models.Foundations.Hosts
@using Sheenam.Blazor.Services
@using System.Net.Http.Json
@inject HttpClient HttpClient
@inject ToastService ToastService

<PageTitle>Uylar Boshqaruvi - Sheenam</PageTitle>

<div class="container-fluid py-4 px-lg-5">
    <div class="header-glass mb-4 p-4 p-lg-5 rounded-4 shadow-sm border-0">
        <div class="row align-items-center g-4">
            <div class="col-xl-4 col-lg-5">
                <div class="d-flex align-items-center gap-3">
                    <div class="header-icon-box shadow-sm">🏠</div>
                    <div>
                        <h1 class="h2 fw-bold text-dark mb-1">Uylar Boshqaruvi</h1>
                        <p class="text-muted mb-0"><i class="bi bi-info-circle me-1"></i> Tizimda jami @filteredHomes.Count ta uy mavjud</p>
                    </div>
                </div>
            </div>
            <div class="col-xl-5 col-lg-4">
                <div class="search-wrapper">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" class="form-control form-control-lg search-input shadow-none"
                           placeholder="Manzil yoki hududni kiriting..." @bind="searchQuery" @bind:event="oninput" @onkeyup="ApplyFilters" />
                    @if (!string.IsNullOrEmpty(searchQuery))
                    {
                        <button class="btn clear-btn shadow-none" @onclick="ClearSearch">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    }
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 text-lg-end">
                <button class="btn btn-indigo btn-raise btn-glow btn-lg rounded-pill px-4 py-3 shadow-lg" @onclick="ShowAddForm">
                    <i class="bi bi-plus-circle-fill me-2"></i> Yangi uy qo'shish
                </button>
            </div>
        </div>
    </div>

    @if (showAddForm)
    {
        <div class="card form-card border-0 shadow-lg rounded-4 mb-5 overflow-hidden animate-slide-down">
            <div class="card-header bg-indigo text-white py-3 border-0">
                <h5 class="mb-0 fw-bold">@(isEditing ? "✏️ Ma'lumotlarni tahrirlash" : "➕ Yangi uy qo'shish")</h5>
            </div>
            <div class="card-body p-4 p-lg-5">
                <EditForm Model="currentHome" OnValidSubmit="SaveHome">
                    <DataAnnotationsValidator />
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary small">Manzil *</label>
                            <InputText @bind-Value="currentHome.Address" class="form-control form-control-lg custom-input" placeholder="Toshkent sh, Chilonzor..." />
                            <ValidationMessage For="@(() => currentHome.Address)" class="text-danger small" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold text-secondary small">Uy turi *</label>
                            <InputSelect @bind-Value="currentHome.Type" class="form-select form-select-lg custom-input">
                                <option value="">-- Tanlang --</option>
                                <option value="@HouseType.Flat">Kvartira</option>
                                <option value="@HouseType.Bungalow">Bungalov</option>
                                <option value="@HouseType.Duplex">Duplex</option>
                                <option value="@HouseType.other">Boshqa</option>
                            </InputSelect>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold text-secondary small">Narxi (oyiga) *</label>
                            <div class="input-group input-group-lg">
                                <InputNumber @bind-Value="currentHome.Price" class="form-control custom-input" />
                                <span class="input-group-text bg-light border-start-0 small text-muted">so'm</span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold text-secondary small">Maydoni (m²)</label>
                            <InputNumber @bind-Value="currentHome.Area" class="form-control form-control-lg custom-input" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold text-secondary small">Yotoq xonalar</label>
                            <InputNumber @bind-Value="currentHome.NumberOfBedrooms" class="form-control form-control-lg custom-input" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold text-secondary small">Vanna xonalar</label>
                            <InputNumber @bind-Value="currentHome.NumberOfBathrooms" class="form-control form-control-lg custom-input" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end gap-3 pb-2">
                            <div class="form-check form-switch custom-switch">
                                <InputCheckbox @bind-Value="currentHome.IsVacant" class="form-check-input" />
                                <label class="form-check-label fw-bold small">Bo'sh</label>
                            </div>
                            <div class="form-check form-switch custom-switch">
                                <InputCheckbox @bind-Value="currentHome.IsPetAllowed" class="form-check-input" />
                                <label class="form-check-label fw-bold small">Hayvonlar</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold text-secondary small">Qo'shimcha ma'lumot</label>
                            <InputTextArea @bind-Value="currentHome.AdditionalInfo" class="form-control custom-input" rows="2" />
                        </div>
                        <div class="col-12 text-end pt-3">
                            <button type="button" class="btn btn-light rounded-pill px-4 py-2 me-2" @onclick="CancelForm">Bekor qilish</button>
                            <button type="submit" class="btn btn-indigo rounded-pill px-5 py-2 shadow-sm fw-bold">Saqlash</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    <div class="filter-section p-4 rounded-4 mb-4 shadow-sm border-0">
        <div class="row g-3 align-items-end">
            <div class="col-lg-2 col-md-4">
                <label class="form-label small fw-bold text-muted">Narx oralig'i</label>
                <div class="input-group input-group-sm">
                    <input type="number" class="form-control border-end-0" placeholder="Min" @bind="minPrice" />
                    <input type="number" class="form-control border-start-0" placeholder="Max" @bind="maxPrice" />
                </div>
            </div>
            <div class="col-lg-2 col-md-4">
                <label class="form-label small fw-bold text-muted">Saralash</label>
                <select class="form-select form-select-sm border-0 bg-light" @bind="sortBy" @bind:after="ApplyFilters">
                    <option value="default">Odatiy</option>
                    <option value="price-asc">Arzonroq ↑</option>
                    <option value="price-desc">Qimmatroq ↓</option>
                </select>
            </div>
            <div class="col-lg-2 col-md-4">
                <label class="form-label small fw-bold text-muted">Sahifa hajmi</label>
                <select class="form-select form-select-sm border-0 bg-light" @bind="pageSize" @bind:after="OnPageSizeChanged">
                    <option value="6">6 ta</option>
                    <option value="9">9 ta</option>
                    <option value="12">12 ta</option>
                </select>
            </div>
            <div class="col-lg-6 col-md-12 text-lg-end">
                <button class="btn btn-outline-secondary btn-raise btn-sm rounded-pill px-3 me-2" @onclick="ResetFilters">
                    <i class="bi bi-arrow-counterclockwise"></i> Tozalash
                </button>
                <button class="btn btn-success btn-raise btn-glow btn-sm rounded-pill px-4 shadow-sm" @onclick="ApplyFiltersWithNotification">
                    <i class="bi bi-check2"></i> Qo'llash
                </button>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            @for (int i = 0; i < 6; i++)
            {
                <div class="col"><div class="skeleton-card shadow-sm"></div></div>
            }
        </div>
    }
    else if (filteredHomes.Count == 0)
    {
        <div class="empty-state py-5 text-center bg-white rounded-4 shadow-sm">
            <div class="empty-icon">🏜️</div>
            <h3 class="mt-4 text-dark fw-bold">Hech narsa topilmadi</h3>
            <p class="text-muted">Qidiruv parametrlarini o'zgartirib ko'ring yoki filterlarni tozalang.</p>
            <button class="btn btn-indigo btn-raise btn-glow rounded-pill px-4" @onclick="ResetFilters">Barcha uylar</button>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            @foreach (var home in pagedHomes)
            {
                <div class="col">
                    <div class="card home-card h-100 border-0 shadow-sm rounded-4 overflow-hidden position-relative animate-fade-in">
                        <div class="home-card-header text-center py-5">
                            <div class="status-badge position-absolute top-0 end-0 m-3">
                                <span class="badge rounded-pill @(home.IsVacant ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger") px-3 py-2 fw-bold">
                                    @(home.IsVacant ? "● Bo'sh" : "● Band")
                                </span>
                            </div>
                            <span class="display-1">🏠</span>
                        </div>

                        <div class="card-body p-4">
                            <div class="mb-3">
                                <span class="text-uppercase fw-bold text-indigo small tracking-wider">@GetTypeText(home.Type)</span>
                                <h5 class="card-title fw-bold text-dark mb-2 mt-1 truncate">@home.Address</h5>
                                <p class="text-muted small mb-0 truncate-2">@(home.AdditionalInfo ?? "Qo'shimcha tavsif kiritilmagan...")</p>
                            </div>

                            <div class="features-row d-flex gap-4 py-3 mb-4 border-top border-bottom">
                                <div class="feature-box">
                                    <span class="d-block text-muted small mb-1">Yotoq</span>
                                    <span class="fw-bold"><i class="bi bi-door-closed me-1"></i> @home.NumberOfBedrooms</span>
                                </div>
                                <div class="feature-box border-start ps-4">
                                    <span class="d-block text-muted small mb-1">Maydon</span>
                                    <span class="fw-bold"><i class="bi bi-aspect-ratio me-1"></i> @home.Area m²</span>
                                </div>
                                <div class="feature-box border-start ps-4">
                                    @if (home.IsPetAllowed)
                                    {
                                        <span class="d-block text-muted small mb-1">Hayvonlar</span>
                                        <span class="badge bg-light text-success fw-bold">Ruxsat</span>
                                    }
                                    else
                                    {
                                        <span class="d-block text-muted small mb-1">Hayvonlar</span>
                                        <span class="badge bg-light text-muted fw-bold">Yo'q</span>
                                    }
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div>
                                    <span class="text-muted small d-block mb-1">Narxi:</span>
                                    <span class="h4 fw-bold text-indigo mb-0">@home.Price.ToString("N0") <small class="text-muted fw-normal" style="font-size: 0.6em;">UZS/oy</small></span>
                                </div>
                            </div>

                            <div class="row g-2">
                                <div class="col-6">
                                    <button class="btn btn-light-indigo btn-raise w-100 rounded-3 py-2 fw-bold" @onclick="() => EditHome(home)">
                                        <i class="bi bi-pencil-square me-1"></i> Tahrirlash
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-outline-danger btn-raise w-100 rounded-3 py-2 border-1 fw-bold" @onclick="() => ShowDeleteConfirm(home.Id)">
                                        <i class="bi bi-trash3 me-1"></i> O'chirish
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-5 d-flex justify-content-center">
            <Pagination CurrentPage="@currentPage"
                        TotalPages="@totalPages"
                        TotalItems="@filteredHomes.Count"
                        PageSize="@pageSize"
                        OnPageChange="HandlePageChange" />
        </div>
    }
</div>

@if (showDeleteConfirm)
{
    <div class="modal-backdrop-custom d-flex align-items-center justify-content-center animate-fade-in">
        <div class="modal-dialog-custom bg-white p-4 p-lg-5 rounded-4 shadow-lg text-center mx-3 animate-zoom-in">
            <div class="delete-icon mb-4">🗑️</div>
            <h2 class="h4 fw-bold text-dark mb-3">O'chirishni tasdiqlaysizmi?</h2>
            <p class="text-muted mb-4 px-lg-5">Siz tanlagan uy ma'lumotlari tizimdan butunlay o'chirib tashlanadi. Bu amalni qaytarib bo'lmaydi.</p>
            <div class="d-flex gap-2 justify-content-center">
                <button class="btn btn-light px-4 py-2 rounded-pill fw-bold" @onclick="CancelDelete">Yo'q, qolsin</button>
                <button class="btn btn-danger px-4 py-2 rounded-pill fw-bold shadow-sm" @onclick="ConfirmDelete">Ha, o'chirilsin</button>
            </div>
        </div>
    </div>
}

