</style>

@code {
    private List<Home> homes = new();
    private List<Home> filteredHomes = new();
    private List<Home> pagedHomes = new();
    private Home currentHome = new() { IsVacant = true, Type = HouseType.Flat };

    private bool isLoading = true;
    private bool isEditing = false;
    private bool showAddForm = false;
    private bool showDeleteConfirm = false;
    private Guid deleteHomeId = Guid.Empty;
    private List<string> validationErrors = new();

    // Pagination
    private int currentPage = 1;
    private int pageSize = 9;
    private int totalPages = 1;

    private string searchQuery = "";
    private decimal? minPrice, maxPrice;
    private double? minArea, maxArea;
    private string filterBedrooms = "";
    private string filterType = "";
    private bool filterVacantOnly = false;
    private string sortBy = "default";

    protected override async Task OnInitializedAsync() => await LoadData();

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            var response = await HttpClient.GetAsync("api/Homes");
            if (response.IsSuccessStatusCode)
            {
                homes = await response.Content.ReadFromJsonAsync<List<Home>>() ?? new();
                filteredHomes = homes;
                UpdatePagination();
            }
        }
        catch { }
        finally { isLoading = false; }
    }

    private void ApplyFilters()
    {
        filteredHomes = homes;

        if (!string.IsNullOrWhiteSpace(searchQuery))
            filteredHomes = filteredHomes.Where(h => h.Address.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)).ToList();

        if (minPrice.HasValue) filteredHomes = filteredHomes.Where(h => h.Price >= minPrice.Value).ToList();
        if (maxPrice.HasValue) filteredHomes = filteredHomes.Where(h => h.Price <= maxPrice.Value).ToList();
        if (minArea.HasValue) filteredHomes = filteredHomes.Where(h => h.Area >= minArea.Value).ToList();
        if (maxArea.HasValue) filteredHomes = filteredHomes.Where(h => h.Area <= maxArea.Value).ToList();

        if (!string.IsNullOrEmpty(filterBedrooms) && int.TryParse(filterBedrooms, out int beds))
            filteredHomes = filteredHomes.Where(h => h.NumberOfBedrooms >= beds).ToList();

        if (!string.IsNullOrEmpty(filterType) && Enum.TryParse<HouseType>(filterType, out var type))
            filteredHomes = filteredHomes.Where(h => h.Type == type).ToList();

        if (filterVacantOnly) filteredHomes = filteredHomes.Where(h => h.IsVacant).ToList();

        filteredHomes = sortBy switch
        {
            "price-asc" => filteredHomes.OrderBy(h => h.Price).ToList(),
            "price-desc" => filteredHomes.OrderByDescending(h => h.Price).ToList(),
            "area-asc" => filteredHomes.OrderBy(h => h.Area).ToList(),
            "area-desc" => filteredHomes.OrderByDescending(h => h.Area).ToList(),
            _ => filteredHomes
        };

        StateHasChanged();
    }

    private void UpdatePagination()
    {
        totalPages = (int)Math.Ceiling(filteredHomes.Count / (double)pageSize);
        if (currentPage > totalPages) currentPage = Math.Max(1, totalPages);
        
        pagedHomes = filteredHomes
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
        
        StateHasChanged();
    }

    private void HandlePageChange(int page)
    {
        currentPage = page;
        UpdatePagination();
    }

    private void OnPageSizeChanged()
    {
        currentPage = 1;
        UpdatePagination();
    }

    private void ApplyFiltersWithNotification()
    {
        ApplyFilters();
        currentPage = 1;
        UpdatePagination();
        ToastService.ShowInfo($"{filteredHomes.Count} ta uy topildi", "Qidiruv natijalari");
    }

    private void ResetFilters()
    {
        searchQuery = ""; minPrice = maxPrice = null; minArea = maxArea = null;
        filterBedrooms = filterType = ""; filterVacantOnly = false; sortBy = "default";
        filteredHomes = homes;
        currentPage = 1;
        UpdatePagination();
        StateHasChanged();
    }

    private void ClearSearch() { searchQuery = ""; ApplyFilters(); UpdatePagination(); }

    private void ShowAddForm()
    {
        showAddForm = true; isEditing = false;
        currentHome = new Home { IsVacant = true, Type = HouseType.Flat };
        validationErrors.Clear();
    }

    private void CancelForm() 
    { 
        showAddForm = false; 
        isEditing = false; 
        validationErrors.Clear();
    }

    private void HandleInvalidSubmit()
    {
        ToastService.ShowWarning("Formada xatoliklar mavjud! Iltimos, to'g'rilang.", "Validation xatosi");
    }

    private void ClearValidationErrors()
    {
        validationErrors.Clear();
    }

    private async Task SaveHome()
    {
        try
        {
            currentHome.HostId = Guid.Parse("00000000-0000-0000-0000-000000000003");
            if (isEditing)
            {
                var response = await HttpClient.PutAsJsonAsync($"api/Homes/{currentHome.Id}", currentHome);
                if (response.IsSuccessStatusCode)
                {
                    ToastService.ShowSuccess("Uy muvaffaqiyatli yangilandi!");
                    showAddForm = false;
                    await LoadData();
                }
                else
                {
                    ToastService.ShowError("Uyni yangilashda xato yuz berdi");
                }
            }
            else
            {
                currentHome.Id = Guid.NewGuid();
                var response = await HttpClient.PostAsJsonAsync("api/Homes", currentHome);
                if (response.IsSuccessStatusCode)
                {
                    ToastService.ShowSuccess("Yangi uy muvaffaqiyatli qo'shildi!");
                    showAddForm = false;
                    await LoadData();
                }
                else
                {
                    ToastService.ShowError("Uyni qo'shishda xato yuz berdi");
                }
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Xato: {ex.Message}");
        }
    }

    private void EditHome(Home home)
    {
        showAddForm = true; isEditing = true;
        currentHome = new Home
        {
            Id = home.Id, HostId = home.HostId, Address = home.Address,
            AdditionalInfo = home.AdditionalInfo, IsVacant = home.IsVacant,
            IsPetAllowed = home.IsPetAllowed, IsShared = home.IsShared,
            NumberOfBedrooms = home.NumberOfBedrooms, NumberOfBathrooms = home.NumberOfBathrooms,
            Area = home.Area, Price = home.Price, Type = home.Type
        };
    }

    private void ShowDeleteConfirm(Guid id)
    {
        deleteHomeId = id;
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirm = false;
        deleteHomeId = Guid.Empty;
    }

    private async Task ConfirmDelete()
    {
        showDeleteConfirm = false;
        await DeleteHome(deleteHomeId);
        deleteHomeId = Guid.Empty;
    }

    private async Task DeleteHome(Guid id)
    {
        try
        {
            var response = await HttpClient.DeleteAsync($"api/Homes/{id}");
            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess("Uy muvaffaqiyatli o'chirildi!");
                await LoadData();
            }
            else
            {
                ToastService.ShowError("Uyni o'chirishda xato yuz berdi");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Xato: {ex.Message}");
        }
    }

    private string GetTypeBadge(HouseType type) => type switch
    {
        HouseType.Flat => "bg-primary", HouseType.Bungalow => "bg-success",
        HouseType.Duplex => "bg-warning", _ => "bg-secondary"
    };

    private string GetTypeText(HouseType type) => type switch
    {
        HouseType.Flat => "Kvartira", HouseType.Bungalow => "Bungalov",
        HouseType.Duplex => "Duplex", _ => "Boshqa"
    };
}