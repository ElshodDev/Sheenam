@page "/login"
@using Sheenam.Blazor.Models.Auth
@using Sheenam.Blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ToastService Toast

<PageTitle>Login - Sheenam</PageTitle>

<div class="login-container">
    <div class="login-card">
        <h2>🔐 Login</h2>

        <EditForm Model="@loginRequest" OnValidSubmit="@HandleLogin">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label>Email</label>
                <InputText @bind-Value="loginRequest.Email"
                           class="form-control"
                           placeholder="your@email.com" />
                <ValidationMessage For="@(() => loginRequest.Email)" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="loginRequest.Password"
                           type="password"
                           class="form-control"
                           placeholder="••••••••" />
                <ValidationMessage For="@(() => loginRequest.Password)" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    @errorMessage
                </div>
            }

            <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                Login
            </button>
        </EditForm>

        <div class="text-center mt-3">
            <p>Don't have an account? <a href="/register">Register here</a></p>
        </div>
    </div>
</div>

@code {
    private LoginRequest loginRequest = new();
    private string errorMessage = string.Empty;
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            Console.WriteLine("🔐 [Blazor] Login started...");
            Console.WriteLine($"📧 [Blazor] Email: {loginRequest.Email}");

            var response = await AuthService.LoginAsync(loginRequest);

            Console.WriteLine($"📦 [Blazor] Response:  {(response == null ? "NULL" : "OK")}");

            if (response != null && !string.IsNullOrEmpty(response.Token))
            {
                var tokenPreview = response.Token.Length > 20
                    ? response.Token.Substring(0, 20) + "..."
                    : response.Token;

                Console.WriteLine($"✅ [Blazor] Token received: {tokenPreview}");

                // ✅ Authentication state'ni yangilash
                ((CustomAuthStateProvider)AuthStateProvider).NotifyUserAuthentication(response.Token);

                Console.WriteLine("✅ [Blazor] Auth state updated");

                // ✅ Biroz kutish (state yangilanishi uchun)
                await Task.Delay(500);

                Console.WriteLine("🔄 [Blazor] Redirecting.. .");

                // ✅ MUHIM: forceLoad:  false (page reload bo'lmasin, token saqlansin)
                Navigation.NavigateTo("/", forceLoad: false);
            }
            else
            {
                errorMessage = "Invalid email or password";
                Console.WriteLine("❌ [Blazor] No token received");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Login failed:  {ex.Message}";
            Console.WriteLine($"❌ [Blazor] Exception: {ex.Message}");
            Console.WriteLine($"❌ [Blazor] Stack: {ex.StackTrace}");
        }
        finally
        {
            isLoading = false;
            Console.WriteLine("🏁 [Blazor] Login finished");
        }
    }
}

