@page "/login"
@using Sheenam.Blazor.Models.Auth
@using Sheenam.Blazor.Services
@inject AuthService AuthService
@inject TokenStorageService TokenStorage
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ToastService ToastService

<PageTitle>Kirish - Sheenam</PageTitle>

<div class="login-page">
    <!-- Background Animation -->
    <div class="animated-bg">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>

    <!-- Login Container -->
    <div class="login-container">
        <!-- Left Side - Branding -->
        <div class="login-branding">
            <div class="brand-logo">
                <span class="logo-icon">🏠</span>
                <h1>Sheenam</h1>
            </div>
            <h2>Uy-joy ijarasi platformasi</h2>
            <p>Qulay va xavfsiz tizimga xush kelibsiz</p>

            <div class="features">
                <div class="feature-item">
                    <span class="feature-icon">✅</span>
                    <span>Xavfsiz autentifikatsiya</span>
                </div>
                <div class="feature-item">
                    <span class="feature-icon">⚡</span>
                    <span>Tez va oson</span>
                </div>
                <div class="feature-item">
                    <span class="feature-icon">🔒</span>
                    <span>Ma'lumotlaringiz himoyalangan</span>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="login-form-wrapper">
            <div class="login-card">
                <div class="card-header">
                    <div class="header-icon">🔐</div>
                    <h3>Tizimga kirish</h3>
                    <p>Emailingiz va parolingizni kiriting</p>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-error">
                        <span class="alert-icon">❌</span>
                        <span>@errorMessage</span>
                    </div>
                }

                <EditForm Model="loginRequest" OnValidSubmit="HandleLogin" class="login-form">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label class="form-label">
                            <span class="label-icon">📧</span>
                            Email
                        </label>
                        <div class="input-wrapper">
                            <InputText @bind-Value="loginRequest.Email"
                                       class="form-input"
                                       placeholder="your@email.com"
                                       type="email" />
                            <span class="input-icon">✉️</span>
                        </div>
                        <ValidationMessage For="@(() => loginRequest.Email)" class="validation-error" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <span class="label-icon">🔒</span>
                            Parol
                        </label>
                        <div class="input-wrapper">
                            <InputText @bind-Value="loginRequest.Password"
                                       class="form-input"
                                       placeholder="••••••••"
                                       type="@(showPassword ? "text" : "password")" />
                            <button type="button"
                                    class="input-toggle"
                                    @onclick="TogglePassword">
                                @(showPassword ? "🙈" : "👁️")
                            </button>
                        </div>
                        <ValidationMessage For="@(() => loginRequest.Password)" class="validation-error" />
                    </div>

                    <div class="form-options">
                        <label class="checkbox-label">
                            <input type="checkbox" @bind="rememberMe" />
                            <span>Eslab qolish</span>
                        </label>
                        <a href="#" class="forgot-link">Parolni unutdingizmi?</a>
                    </div>

                    <button type="submit" class="btn-login" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner"></span>
                            <span>Kirilmoqda...</span>
                        }
                        else
                        {
                            <span>🚀</span>
                            <span>Kirish</span>
                        }
                    </button>
                </EditForm>

                <div class="form-footer">
                    <p>Akkauntingiz yo'qmi? </p>
                    <a href="/register" class="register-link">
                        <span>📝</span>
                        <span>Ro'yxatdan o'tish</span>
                    </a>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="quick-stats">
                <div class="stat-item">
                    <span class="stat-value">500+</span>
                    <span class="stat-label">Foydalanuvchilar</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">1000+</span>
                    <span class="stat-label">Uylar</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">99.9%</span>
                    <span class="stat-label">Uptime</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* ==========================================
           MODERN LOGIN PAGE STYLES
           ========================================== */

    .login-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    /* Animated Background */
    .animated-bg {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        animation: float 20s ease-in-out infinite;
    }

    .shape-1 {
        width: 300px;
        height: 300px;
        top: -100px;
        left: -100px;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 200px;
        height: 200px;
        bottom: -50px;
        right: 10%;
        animation-delay: 2s;
    }

    .shape-3 {
        width: 250px;
        height: 250px;
        top: 50%;
        right: -125px;
        animation-delay: 4s;
    }

    @@keyframes float {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }

        33% {
            transform: translate(30px, -50px) scale(1.1);
        }

        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
    }

    /* Login Container */
    .login-container {
        position: relative;
        z-index: 10;
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 1200px;
        width: 90%;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    /* Left Side - Branding */
    .login-branding {
        padding: 4rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .brand-logo {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .logo-icon {
        font-size: 4rem;
        animation: bounce 2s ease-in-out infinite;
    }

    .brand-logo h1 {
        margin: 0;
        font-size: 3rem;
        font-weight: 800;
    }

    .login-branding h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .login-branding p {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 3rem;
    }

    . features {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 1.1rem;
    }

    .feature-icon {
        font-size: 1.5rem;
    }

    /* Right Side - Form */
    .login-form-wrapper {
        padding: 4rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .login-card {
        width: 100%;
    }

    .card-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .header-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }
    }

    .card-header h3 {
        margin: 0 0 0.5rem;
        font-size: 2rem;
        color: #1f2937;
    }

    .card-header p {
        margin: 0;
        color: #6b7280;
    }

    /* Alert */
    .alert {
        padding: 1rem;
        border-radius: 12px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        animation: slideIn 0.3s ease-out;
    }

    .alert-error {
        background: #fee2e2;
        color: #991b1b;
        border: 1px solid #fecaca;
    }

    .alert-icon {
        font-size: 1.25rem;
    }

    @@keyframes slideIn {
        from {
            transform: translateY(-20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Form */
    .login-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    . form-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: #374151;
        font-size: 0.95rem;
    }

    . label-icon {
        font-size: 1.1rem;
    }

    .input-wrapper {
        position: relative;
    }

    .form-input {
        width: 100%;
        padding: 1rem 3rem 1rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 14px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
    }

        .form-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

    .input-icon, .input-toggle {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 1.25rem;
        opacity: 0.5;
    }

    .input-toggle {
        background: none;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .input-toggle:hover {
            opacity: 1;
            transform: translateY(-50%) scale(1.2);
        }

    .validation-error {
        color: #dc2626;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    . form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        font-size: 0.9rem;
        color: #6b7280;
    }

    .forgot-link {
        color: #667eea;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .forgot-link:hover {
            color: #764ba2;
            text-decoration: underline;
        }

    /* Login Button */
    .btn-login {
        width: 100%;
        padding: 1.25rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 14px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

        .btn-login:hover: not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(102, 126, 234, 0.5);
        }

        .btn-login:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

    .spinner {
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Form Footer */
    .form-footer {
        margin-top: 2rem;
        text-align: center;
    }

        .form-footer p {
            margin: 0 0 1rem;
            color: #6b7280;
        }

    .register-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 2rem;
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .register-link:hover {
            background: rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
        }

    /* Quick Stats */
    .quick-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e5e7eb;
    }

    .stat-item {
        text-align: center;
    }

    .stat-value {
        display: block;
        font-size: 1.75rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        display: block;
        font-size: 0.85rem;
        color: #6b7280;
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .login-container {
            grid-template-columns: 1fr;
        }

        .login-branding {
            display: none;
        }
    }

    @@media (max-width: 640px) {
        .login-form-wrapper {
            padding: 2rem;
        }

        .quick-stats {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    private readonly LoginRequest loginRequest = new();
    private bool isLoading = false;
    private bool showPassword = false;
    private bool rememberMe = false;
    private string? errorMessage;

    private void TogglePassword()
    {
        showPassword = !showPassword;
    }

    private async Task HandleLogin()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            Console.WriteLine("🔐 [Login] Starting login process...");

            var response = await AuthService.LoginAsync(loginRequest);

            if (response?.Token != null)
            {
                Console.WriteLine("✅ [Login] Token received, storing...");

                // Token'ni saqlash
                await TokenStorage.SetTokenAsync(response.Token);

                // Auth state'ni yangilash
                if (AuthStateProvider is CustomAuthStateProvider provider)
                {
                    Console.WriteLine("🔔 [Login] Notifying authentication state...");
                    provider.NotifyUserAuthentication(response.Token);
                }

                // Biroz kutish - state update bo'lishi uchun
                await Task.Delay(100);

                Console.WriteLine("🚀 [Login] Navigating to dashboard...");

                ToastService.ShowSuccess("Xush kelibsiz!", "Login muvaffaqiyatli");

                // ❌ forceLoad ni olib tashladik - bu auth state'ni yo'qotadi
                Navigation.NavigateTo("/", forceLoad: false);
            }
            else
            {
                errorMessage = "Email yoki parol noto'g'ri!";
                Console.WriteLine("❌ [Login] Invalid credentials");
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Login jarayonida xatolik yuz berdi. Qayta urinib ko'ring.";
            Console.WriteLine($"❌ [Login] Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}