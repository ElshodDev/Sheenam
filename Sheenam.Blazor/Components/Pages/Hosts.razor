@page "/hosts"
@using Sheenam.Blazor.Models.Foundations.Guests
@using Sheenam.Blazor.Models.Foundations.Hosts
@using System.Net.Http.Json
@inject HttpClient HttpClient

<PageTitle>Hostlar</PageTitle>

<div class="container my-5">
    <h1 class="text-center mb-5 display-5 fw-bold text-success">
        🏡 Hostlar ro'yxati
    </h1>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>❌ Xato:</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>✅ Muvaffaqiyatli!</strong> @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    <!-- Yangi Host qo'shish formasi -->
    <div class="card shadow-lg border-0 mb-5">
        <div class="card-header bg-success text-white py-3">
            <h4 class="mb-0">
                @if (isEditing)
                {
                    <text>✏️ Hostni tahrirlash</text>
                }
                else
                {
                    <text>➕ Yangi host qo'shish</text>
                }
            </h4>
        </div>
        <div class="card-body p-4">
            <EditForm Model="currentHost" OnValidSubmit="SaveHost">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger mb-3" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-success">Ism</label>
                        <InputText @bind-Value="currentHost.FirstName" class="form-control form-control-lg"
                                   placeholder="Ism kiriting" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-success">Familya</label>
                        <InputText @bind-Value="currentHost.LastName" class="form-control form-control-lg"
                                   placeholder="Familya kiriting" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-success">Email</label>
                        <InputText @bind-Value="currentHost.Email" type="email" class="form-control form-control-lg"
                                   placeholder="email@example.com" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-success">Telefon raqami</label>
                        <InputText @bind-Value="currentHost.PhoneNumber" class="form-control form-control-lg"
                                   placeholder="+998901234567" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-success">Tug'ilgan sana</label>
                        <InputDate @bind-Value="currentHost.DateOfBirth" class="form-control form-control-lg" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-success">Jins</label>
                        <InputSelect @bind-Value="currentHost.Gender" class="form-select form-select-lg">
                            <option value="@GenderType.Male">Erkak</option>
                            <option value="@GenderType.Female">Ayol</option>
                            <option value="@GenderType.Other">Boshqa</option>
                        </InputSelect>
                    </div>

                    <div class="col-12 text-end mt-3">
                        @if (isEditing)
                        {
                            <button type="button" class="btn btn-secondary btn-lg px-4 me-2" @onclick="CancelEdit">
                                ❌ Bekor qilish
                            </button>
                        }
                        <button type="submit" class="btn btn-success btn-lg px-5 shadow" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <text>Saqlanmoqda...</text>
                            }
                            else if (isEditing)
                            {
                                <text>💾 Saqlash</text>
                            }
                            else
                            {
                                <text>➕ Qo'shish</text>
                            }
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>

    <!-- Hostlar ro'yxati -->
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-success" style="width: 4rem; height: 4rem;"></div>
            <p class="mt-3 text-muted">Hostlar yuklanmoqda...</p>
        </div>
    }
    else if (hosts.Count == 0)
    {
        <div class="alert alert-info text-center fs-4 p-5 rounded shadow">
            😔 Hozircha hech qanday host yo'q.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-lg rounded overflow-hidden">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-success text-white">
                    <tr>
                        <th>#</th>
                        <th>ID</th>
                        <th>Ism Familya</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Tug'ilgan sana</th>
                        <th>Jins</th>
                        <th>Amallar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (host, i) in hosts.Select((h, idx) => (h, idx)))
                    {
                        <tr class="hover-row">
                            <td class="fw-bold">@(i + 1)</td>
                            <td><small>@host.Id.ToString().Substring(0, 8)...</small></td>
                            <td class="fw-bold">@host.FirstName @host.LastName</td>
                            <td>
                                <a href="mailto:@host.Email" class="text-decoration-none">
                                    @host.Email
                                </a>
                            </td>
                            <td>@host.PhoneNumber</td>
                            <td>@host.DateOfBirth.ToString("dd.MM.yyyy")</td>
                            <td>
                                <span class="badge @GetGenderBadgeClass(host.Gender) fs-6">
                                    @GetGenderText(host.Gender)
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary me-1" @onclick="() => EditHost(host)">
                                    ✏️ Tahrirlash
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteHost(host.Id)">
                                    🗑️ O'chirish
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <small class="text-muted">
                Jami: <strong class="text-success">@hosts.Count</strong> ta host
            </small>
        </div>
    }
</div>

<style>
    .text-success {
        color: #198754 !important;
    }

    .bg-success {
        background-color: #198754 !important;
    }

    .btn-success {
        background-color: #198754;
        border-color: #198754;
        color: white;
    }

        .btn-success:hover {
            background-color: #157347;
            border-color: #146c43;
        }

    .hover-row:hover {
        background-color: #f0fff4;
    }
</style>

@code {
    private List<Host> hosts = new();
    private Host currentHost = new() { DateOfBirth = DateTime.Today.AddYears(-25), Gender = GenderType.Male };

    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool isEditing = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var response = await HttpClient.GetAsync("api/Hosts");

            if (response.IsSuccessStatusCode)
            {
                hosts = await response.Content.ReadFromJsonAsync<List<Host>>() ?? new();
                if (!isEditing)
                {
                    successMessage = $"{hosts.Count} ta host yuklandi";
                }
            }
            else
            {
                errorMessage = $"Ma'lumotlarni yuklashda xato: {response.StatusCode}";
            }
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"API bilan bog'lanishda xato: {ex.Message}";
        }
        catch (Exception ex)
        {
            errorMessage = $"Kutilmagan xato: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SaveHost()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;
            successMessage = null;

            if (isEditing)
            {
                // Update
                var response = await HttpClient.PutAsJsonAsync($"api/Hosts/{currentHost.Id}", currentHost);

                if (response.IsSuccessStatusCode)
                {
                    successMessage = "Host muvaffaqiyatli yangilandi!";
                    isEditing = false;
                    ResetForm();
                    await LoadData();
                }
                else
                {
                    var error = await response.Content.ReadAsStringAsync();
                    errorMessage = $"Yangilashda xato: {response.StatusCode} - {error}";
                }
            }
            else
            {
                // Create
                currentHost.Id = Guid.NewGuid();

                var response = await HttpClient.PostAsJsonAsync("api/Hosts", currentHost);

                if (response.IsSuccessStatusCode)
                {
                    successMessage = "Host muvaffaqiyatli qo'shildi!";
                    ResetForm();
                    await LoadData();
                }
                else
                {
                    var error = await response.Content.ReadAsStringAsync();
                    errorMessage = $"Qo'shishda xato: {response.StatusCode} - {error}";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Saqlashda xato: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void EditHost(Host host)
    {
        isEditing = true;
        currentHost = new Host
        {
            Id = host.Id,
            FirstName = host.FirstName,
            LastName = host.LastName,
            Email = host.Email,
            PhoneNumber = host.PhoneNumber,
            DateOfBirth = host.DateOfBirth,
            Gender = host.Gender
        };
        successMessage = null;
        errorMessage = null;
    }

    private void CancelEdit()
    {
        isEditing = false;
        ResetForm();
    }

    private async Task DeleteHost(Guid id)
    {
        try
        {
            var response = await HttpClient.DeleteAsync($"api/Hosts/{id}");

            if (response.IsSuccessStatusCode)
            {
                successMessage = "Host o'chirildi!";
                await LoadData();
            }
            else
            {
                errorMessage = $"O'chirishda xato: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"O'chirishda xato: {ex.Message}";
        }
    }

    private void ResetForm()
    {
        currentHost = new Host
        {
            DateOfBirth = DateTime.Today.AddYears(-25),
            Gender = GenderType.Male
        };
    }

    private string GetGenderBadgeClass(GenderType gender) => gender switch
    {
        GenderType.Male => "bg-primary",
        GenderType.Female => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetGenderText(GenderType gender) => gender switch
    {
        GenderType.Male => "Erkak",
        GenderType.Female => "Ayol",
        _ => "Boshqa"
    };
}