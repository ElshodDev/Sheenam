@page "/guests"
@using Sheenam.Blazor.Models.Foundations.Guests
@using Sheenam.Blazor.Models.ViewModels
@using Sheenam.Blazor.Services.Views.Guests
@using Sheenam.Blazor.Components.Guests
@using Sheenam.Blazor.Components.Shared
@inject IGuestViewService GuestViewService
@inject NavigationManager NavigationManager

<div class="guests-page">
    <div class="page-header">
        <h1>Guest Management</h1>
        <button class="btn btn-primary" @onclick="OpenCreateModal">
            Add New Guest
        </button>
    </div>

    @if (isLoading)
    {
        <LoadingSkeleton />
    }
    else if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
    else if (guestViewModels == null || !guestViewModels.Any())
    {
        <div class="empty-state">
            <h3>No Guests Found</h3>
            <p>Start by adding your first guest.</p>
            <button class="btn btn-primary" @onclick="OpenCreateModal">
                Add Guest
            </button>
        </div>
    }
    else
    {
        <div class="guests-grid">
            @foreach (var viewModel in guestViewModels)
            {
                <GuestCard ViewModel="@viewModel"
                          OnEdit="@OpenEditModal"
                          OnView="@ViewGuestDetails"
                          OnDelete="@OpenDeleteConfirmation" />
            }
        </div>
    }

    @* Create/Edit Modal *@
    @if (showModal)
    {
        <div class="modal fade show d-block" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@modalTitle</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        <GuestForm Guest="@currentGuest"
                                  OnValidSubmit="@HandleSubmit"
                                  OnCancel="@CloseModal"
                                  IsSubmitting="@isSubmitting"
                                  SubmitButtonText="@(isEditMode ? "Update" : "Create")" />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-backdrop fade show"></div>
    }

    @* Delete Confirmation *@
    <ConfirmDialog IsVisible="@showDeleteConfirmation"
                  Title="Delete Guest"
                  Message="@($"Are you sure you want to delete {guestToDelete?.FirstName} {guestToDelete?.LastName}?")"
                  OnConfirm="@ConfirmDelete"
                  OnCancel="@CancelDelete"
                  IsProcessing="@isSubmitting" />
</div>

@code {
    private List<GuestViewModel> guestViewModels = new();
    private Guest currentGuest = new();
    private Guest? guestToDelete;
    
    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool showModal = false;
    private bool showDeleteConfirmation = false;
    private bool isEditMode = false;
    
    private string errorMessage = string.Empty;
    private string modalTitle => isEditMode ? "Edit Guest" : "Add New Guest";

    protected override async Task OnInitializedAsync()
    {
        await LoadGuestsAsync();
    }

    private async Task LoadGuestsAsync()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            guestViewModels = await GuestViewService.RetrieveAllGuestViewsAsync();
            
            if (guestViewModels.Any() && guestViewModels.First().HasError)
            {
                errorMessage = guestViewModels.First().ErrorMessage;
                guestViewModels.Clear();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load guests: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenCreateModal()
    {
        isEditMode = false;
        currentGuest = new Guest { DateOfBirth = DateTimeOffset.Now.AddYears(-25) };
        showModal = true;
    }

    private void OpenEditModal(Guest guest)
    {
        isEditMode = true;
        currentGuest = new Guest
        {
            Id = guest.Id,
            FirstName = guest.FirstName,
            LastName = guest.LastName,
            Email = guest.Email,
            PhoneNumber = guest.PhoneNumber,
            Address = guest.Address,
            DateOfBirth = guest.DateOfBirth,
            Gender = guest.Gender
        };
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        currentGuest = new();
    }

    private async Task HandleSubmit(Guest guest)
    {
        isSubmitting = true;
        GuestViewModel result;

        try
        {
            result = await (isEditMode
                ? GuestViewService.ModifyGuestViewAsync(guest)
                : GuestViewService.AddGuestViewAsync(guest));

            if (!result.HasError)
            {
                CloseModal();
                await LoadGuestsAsync();
            }
            else
            {
                errorMessage = result.ErrorMessage;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Operation failed: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ViewGuestDetails(Guest guest)
    {
        NavigationManager.NavigateTo($"/guests/{guest.Id}");
    }

    private void OpenDeleteConfirmation(Guest guest)
    {
        guestToDelete = guest;
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        guestToDelete = null;
        showDeleteConfirmation = false;
    }

    private async Task ConfirmDelete()
    {
        if (guestToDelete == null) return;

        isSubmitting = true;

        try
        {
            var result = await GuestViewService.RemoveGuestViewByIdAsync(guestToDelete.Id);

            if (!result.HasError)
            {
                await LoadGuestsAsync();
            }
            else
            {
                errorMessage = result.ErrorMessage;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Delete failed: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
            showDeleteConfirmation = false;
            guestToDelete = null;
        }
    }
}
