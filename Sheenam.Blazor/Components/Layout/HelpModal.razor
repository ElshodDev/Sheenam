@if (IsVisible)
{
    <div class="help-modal-overlay" @onclick="Close">
        <div class="help-modal" @onclick:stopPropagation="true">
            <div class="help-modal-header">
                <h4 class="mb-0 text-white">📖 Yordam</h4>
                <button class="btn-close-custom" @onclick="Close">×</button>
            </div>
            <div class="help-modal-body">
                <div class="help-section">
                    <h5>🏡 Hostlar</h5>
                    <p>Uy egalarini boshqarish, yangi host qo'shish, tahrirlash va o'chirish.</p>
                </div>
                <div class="help-section">
                    <h5>🏠 Uylar</h5>
                    <p>Ijaraga beriladigan uylarni boshqarish, narx, maydon va boshqa ma'lumotlarni kiritish.</p>
                </div>
                <div class="help-section">
                    <h5>👥 Mehmonlar</h5>
                    <p>Mehmonlarni ro'yxatga olish va ularning ma'lumotlarini boshqarish.</p>
                </div>
                <div class="help-section">
                    <h5>✉️ So'rovlar</h5>
                    <p>Mehmonlardan kelgan uy ijarasi so'rovlarini ko'rish va boshqarish.</p>
                </div>
                <hr />
                <div class="text-center">
                    <p class="text-muted small mb-2">
                        Qo'shimcha yordam uchun:
                    </p>
                    <p class="mb-0">
                        <strong class="text-primary">support@sheenam.uz</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .help-modal-overlay {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
        bottom: 0 !important;
        background: rgba(0, 0, 0, 0.85) !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        z-index: 999999 !important;
        animation: fadeIn 0.3s ease;
        padding: 1rem;
    }

    .help-modal {
        background: white !important;
        border-radius: 1rem;
        max-width: 600px;
        width: 100%;
        max-height: 85vh;
        overflow: hidden;
        box-shadow: 0 30px 80px rgba(0, 0, 0, 0.6) !important;
        animation: slideUp 0.3s ease;
        position: relative;
        z-index: 1000000 !important;
    }

    .help-modal-header {
        padding: 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: none;
    }

    .help-modal-body {
        padding: 2rem;
        max-height: calc(85vh - 100px);
        overflow-y: auto;
        background: white !important;
    }

    .help-section {
        margin-bottom: 2rem;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 0.5rem;
        border-left: 4px solid #667eea;
    }

        .help-section h5 {
            color: #667eea;
            margin-bottom: 0.75rem;
            font-weight: 700;
            font-size: 1.1rem;
        }

        .help-section p {
            color: #495057;
            margin-bottom: 0;
            line-height: 1.6;
        }

    .btn-close-custom {
        background: transparent;
        border: none;
        color: white;
        opacity: 1;
        padding: 0;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 2.5rem;
        line-height: 1;
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-close-custom:hover {
            transform: rotate(90deg);
            opacity: 0.8;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            transform: translateY(50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Dark mode */
    body.dark-mode .help-modal {
        background-color: #2d2d2d !important;
        border: 1px solid #404040;
    }

    body.dark-mode .help-modal-body {
        background-color: #2d2d2d !important;
    }

    body.dark-mode .help-section {
        background-color: #252525 !important;
        border-left-color: #667eea !important;
    }

        body.dark-mode .help-section h5 {
            color: #8b9aff !important;
        }

        body.dark-mode .help-section p {
            color: #c0c0c0 !important;
        }

    body.dark-mode .text-primary {
        color: #8b9aff !important;
    }
</style>

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }
}