@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1" style="z-index: 1060;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header @GetHeaderClass()">
                    <h5 class="modal-title">
                        @GetIcon() @Title
                    </h5>
                    <button type="button" class="btn-close @(Type == ConfirmType.Danger ? "btn-close-white" : "")"
                            @onclick="Cancel"></button>
                </div>
                <div class="modal-body">
                    @Message
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">
                        ❌ Yo'q
                    </button>
                    <button type="button" class="btn @GetButtonClass()" @onclick="Confirm">
                        ✅ Ha, ishonchim komil
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.7);
    }

    .modal.show {
        animation: fadeIn 0.2s ease-out;
    }

    .modal-dialog {
        animation: slideDown 0.3s ease-out;
    }

    .modal-header-danger {
        background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
        color: white;
    }

    .modal-header-warning {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideDown {
        from {
            transform: translateY(-50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string Title { get; set; } = "Tasdiqlash";
    [Parameter] public string Message { get; set; } = "Ishonchingiz komilmi?";
    [Parameter] public ConfirmType Type { get; set; } = ConfirmType.Danger;
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync();
    }

    private async Task Cancel()
    {
        await OnCancel.InvokeAsync();
    }

    private string GetHeaderClass() => Type switch
    {
        ConfirmType.Danger => "modal-header-danger",
        ConfirmType.Warning => "modal-header-warning",
        _ => ""
    };

    private string GetButtonClass() => Type switch
    {
        ConfirmType.Danger => "btn-danger",
        ConfirmType.Warning => "btn-warning",
        _ => "btn-primary"
    };

    private string GetIcon() => Type switch
    {
        ConfirmType.Danger => "🗑️",
        ConfirmType.Warning => "⚠️",
        _ => "❓"
    };

    public enum ConfirmType
    {
        Danger,
        Warning,
        Info
    }
}