@page "/login"

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 12px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Sheenam</h2>
            <p class="text-muted">Tizimga kirish</p>
        </div>

        <EditForm Model="@loginRequest" OnValidSubmit="HandleLoginAsync">
            <div class="mb-3">
                <label class="form-label text-secondary">Email manzilingiz</label>
                <InputText @bind-Value="loginRequest.Email" class="form-control form-control-lg" placeholder="user@example.com" />
            </div>

            <div class="mb-4">
                <label class="form-label text-secondary">Parol</label>
                <InputText @bind-Value="loginRequest.Password" type="password" class="form-control form-control-lg" placeholder="******" />
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm" disabled="@isProcessing">
                @if (isProcessing)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>Kirilmoqda...</span>
                }
                else
                {
                    <span>Kirish</span>
                }
            </button>
        </EditForm>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-3 text-center py-2">
                <i class="oi oi-warning me-2"></i> @errorMessage
            </div>
        }
    </div>
</div>